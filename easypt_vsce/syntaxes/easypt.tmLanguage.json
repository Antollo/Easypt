{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "easypt",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#literals"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#punctuation"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.easypt",
				"match": "\\b(if|while|for|var|auto|throw|return)\\b"
			}]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.easypt",
					"match": "\"[^\"\\\\]*(\\\\.[^\"\\\\]*)*\""
				}
			]
		},
		"comments": {
			"name": "comment.easypt",
			"begin": "#",
			"end": "#",
			"patterns":[]
		},
		"punctuation":
		{
			"patterns":[
				{
					"name": "markup.bold.easypt",
					"match": "[;]"
				}
			]
		},
		"literals": {
			"patterns":[
				{
					"name": "constant.numeric.easypt",
					"match": "[-]?[0-9]+([.][0-9]+)?"
				}
			]
		}
	},
	"scopeName": "source.easypt"
}